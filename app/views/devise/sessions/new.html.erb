<div class="session-div">
  <div class="session-div--image">
    <%= link_to root_path do  %>
      <%= image_tag 'food-and-restaurant.svg', class:"logo-icon" %>
      <span class="logo title">Cooki</span>
    <% end %>
    <section>
      <div class="skewed"></div>
    </section>
  </div>
  <div class="session-div--login">
    <h2>Do you want to sign in ?</h2>
    <div class="session-div--login--form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"main-button link-nav" %>
        </div><br>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
