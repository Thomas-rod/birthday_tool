        <span class="label <%= friend.nickname %>"><%= friend.nickname.capitalize %></span>
        <div class="card-friend--body">
          <% if friend.photo.attached? %>
            <%= cl_image_tag friend.photo.key class:"avatar-card--small" %>
          <% else %>
            <%= image_tag "#{friend.photo_placeholder}.svg", class:"avatar-card--small" %>
          <% end %>
